<% layout('/layouts/boilerplate.ejs') -%>

<body>
    <div class="container mt-5">
        <h2 class="mb-4">Edit Listing</h2>
        <form method="POST" action="/index/<%= data._id %>?_method=PUT" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="title" id="title" value="<%= data.title %>" class="form-control" required><div class="valid-feedback">Title looks good</div>
                <div class="invalid-feedback">title must be valid</div>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input type="text" name="image" id="image" value="<%= data.image %>" class="form-control" required>
                <div class="invalid-feedback">image should be valid</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="description" id="description" class="form-control" required><%= data.description %></textarea>
                <div class="invalid-feedback">description should be valid</div>
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="price" id="price" value="<%= data.price %>" class="form-control" required>
                <div class="invalid-feedback">price should be valid</div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="location" id="location" value="<%= data.location %>" class="form-control" required>
                <div class="invalid-feedback">location should be valid</div>
            </div>

            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="country" id="country" value="<%= data.country %>" class="form-control" required>
                <div class="invalid-feedback">country name should be valid</div>
            </div>

            <button type="submit" class="btn btn-primary update-btn">Update</button>
        </form>
    </div>
</body>
