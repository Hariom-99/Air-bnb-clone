<% layout('/layouts/boilerplate.ejs') -%>

  <body>
    <div class="container mt-5">
      <div class="row justify-content-center">

        <!-- Hotel Details Card -->
        <div class="col-md-6 mb-2">
          <div class="card text-center">
            <h1>
              <%= hotel_data.title %>
            </h1>
            <img src="<%= hotel_data.image %>" class="card-img-top" alt="image_not_found">
            <p class="card-text">Owned by ~
              <%=hotel_data.owner.username%>
            </p>
            <div class="card-body">
              <p class="card-text">
                <%= hotel_data.description %>
              </p>
              <h2>â‚¹<%= hotel_data.price %>
              </h2>
              <h4 class="text-muted">Location: <%= hotel_data.location %>, <%= hotel_data.country %>
              </h4>
<!-- to show the delete and endit  button to the owner only -->
              <%if(currUser && currUser._id.equals(hotel_data.owner._id)){ %>
                <div class="d-flex justify-content-around mt-4">
                  <a href="/index/<%= hotel_data._id %>/edit" class="btn btn-primary edit-btn">Edit</a>
                  <form method="POST" action="/index/<%= hotel_data._id %>?_method=DELETE">
                    <button type="submit" class="btn btn-dark">Delete</button>
                  </form>
                </div>
                <%}%>
            </div>
          </div>
        </div>

        <div class="col-md-6 mb-4">
          <% if(currUser){%>
          <div class="card p-4">
            <h4 class="text-center mb-3">Leave Rating</h4>
            <form action="/index/<%= hotel_data._id %>/review" method="post" novalidate class=" needs-validation">
              <div class="form-group mb-3">
                <label for="rating">Rating</label>
                <input type="range" class="form-control" id="rating" name="review[rating]" min=1 max=5>
              </div>
              <div class="form-group mb-3">
                <label for="comment">comment</label>
                <textarea class="form-control" id="comment" placeholder="Write your review" name="review[comment]"
                  required></textarea>
                <div class="invalid-feedback">please enter comment for review</div>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-success">Submit</button>
              </div>
            </form>
            <hr>
            <% } %>
            <p><b>ALL reivews </b></p>
            <div class="row">
  <% for (rev of hotel_data.reviews) { %>
    <div class="review-card col-md-5 mb-4 ms-2">
      <div class="card h-100 shadow-sm d-flex flex-column">
        <div class="card-header">
          <%= rev.author.username%>
        </div>
        <div class="card-body flex-grow-1 d-flex flex-column">
          <!-- Scrollable review content -->
          <div class="review-content flex-grow-1 overflow-auto mb-3 p-2 border rounded">
            <p class="mb-2"><%= rev.comment %></p>
            <p><%= rev.rating %> Stars</p>
          </div>

          <!-- Delete button at bottom -->
          <form action="/index/<%= hotel_data._id %>/review/<%= rev._id %>?_method=DELETE" method="post" class="mt-auto">
            <button class="btn btn-dark w-100">Delete</button>
          </form>
        </div>
      </div>
    </div>
  <% } %>
</div>



          </div>
        </div>

      </div>
    </div>

  </body>